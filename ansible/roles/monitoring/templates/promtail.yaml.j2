server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: {{ loki_url }}/loki/api/v1/push

scrape_configs:

  - job_name: sys_syslog
    static_configs:
      - targets:
          - localhost
        labels:
          job: sys_syslog
          host: {{ ansible_hostname }}
          __path__: /var/log/syslog

  - job_name: sys_messages
    static_configs:
      - targets:
          - localhost
        labels:
          job: sys_messages
          host: {{ ansible_hostname }}
          __path__: /var/log/messages

  - job_name: sys_auth
    static_configs:
      - targets:
          - localhost
        labels:
          job: sys_auth
          host: {{ ansible_hostname }}
          __path__: /var/log/auth.log

  - job_name: sys_user
    static_configs:
      - targets:
          - localhost
        labels:
          job: sys_user
          host: {{ ansible_hostname }}
          __path__: /var/log/user.log
